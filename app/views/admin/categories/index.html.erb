<h1>Listing Categories</h1> 

<table class="index">
    <tr>
        <th>Category</th>
        <th>Type</th>
    </tr>
<% @categories.each do |category| %>
    <tr>
        <td><%= category.name %></td>
        <td><%= category.type %></td>
    </tr> 
<% end %> 
</table> 
<br /> 
<%= link_to "New Category", :action => "new" %>


